<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.four.qna.mapper.QnaCommentMapper">

    <resultMap id="QnaCommentResultMap" type="kr.co.four.qna.model.QnaComment">
        <id property="id" column="id" />
        <result property="boardId" column="board_id" />
        <result property="commenter" column="commenter" />
        <result property="comment" column="comment" />
        <result property="createdAt" column="created_at" />
    </resultMap>

    <insert id="insert" parameterType="kr.co.four.qna.model.QnaComment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO qna_comment (board_id, commenter, comment, created_at)
        VALUES (#{boardId}, #{commenter}, #{comment}, NOW())
    </insert>

    <select id="findByBoardId" parameterType="long" resultMap="QnaCommentResultMap">
        SELECT * FROM qna_comment WHERE board_id = #{boardId} ORDER BY id ASC
    </select>

    <delete id="delete" parameterType="long">
        DELETE FROM qna_comment WHERE id = #{id}
    </delete>

</mapper> 