<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.four.qna.mapper.QnaFileMapper">

    <resultMap id="QnaFileResultMap" type="kr.co.four.qna.model.QnaFile">
        <id property="id" column="id" />
        <result property="boardId" column="board_id" />
        <result property="fileName" column="file_name" />
        <result property="filePath" column="file_path" />
        <result property="uploadedAt" column="uploaded_at" />
    </resultMap>

    <insert id="insert" parameterType="kr.co.four.qna.model.QnaFile" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO qna_file (board_id, file_name, file_path, uploaded_at)
        VALUES (#{boardId}, #{fileName}, #{filePath}, NOW())
    </insert>

    <select id="findById" parameterType="long" resultMap="QnaFileResultMap">
        SELECT * FROM qna_file WHERE id = #{id}
    </select>

    <select id="findByBoardId" parameterType="long" resultMap="QnaFileResultMap">
        SELECT * FROM qna_file WHERE board_id = #{boardId}
    </select>

    <delete id="delete" parameterType="long">
        DELETE FROM qna_file WHERE id = #{id}
    </delete>

    <delete id="deleteByBoardId" parameterType="long">
        DELETE FROM qna_file WHERE board_id = #{boardId}
    </delete>

</mapper> 