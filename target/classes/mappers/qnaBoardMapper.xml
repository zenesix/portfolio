<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.four.qna.mapper.QnaBoardMapper">

    <resultMap id="QnaBoardResultMap" type="kr.co.four.qna.model.QnaBoard">
        <id property="id" column="id" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="writer" column="writer" />
        <result property="password" column="password" />
        <result property="isSecret" column="is_secret" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
        <result property="viewCount" column="view_count" />
    </resultMap>

    <select id="findAll" resultMap="QnaBoardResultMap">
        SELECT * FROM qna_board ORDER BY id DESC
    </select>

    <select id="findById" parameterType="long" resultMap="QnaBoardResultMap">
        SELECT * FROM qna_board WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="kr.co.four.qna.model.QnaBoard" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO qna_board (title, content, writer, password, is_secret, created_at, updated_at, view_count)
        VALUES (#{title}, #{content}, #{writer}, #{password}, #{isSecret}, NOW(), NOW(), 0)
    </insert>

    <update id="update" parameterType="kr.co.four.qna.model.QnaBoard">
        UPDATE qna_board
        SET title = #{title}, content = #{content}, writer = #{writer}, password = #{password}, is_secret = #{isSecret}, updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM qna_board WHERE id = #{id}
    </delete>

</mapper> 